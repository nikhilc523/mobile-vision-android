<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/emergency_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:gravity="center"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/text_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/emergency_subtitle"
        android:textSize="16sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress Ring Container -->
    <FrameLayout
        android:id="@+id/progress_container"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:layout_constraintTop_toBottomOf="@id/text_subtitle"
        app:layout_constraintBottom_toTopOf="@id/text_demo_note"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Circular Progress Indicator -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress_countdown"
            style="@style/Widget.Material3.CircularProgressIndicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            app:indicatorSize="240dp"
            app:trackThickness="12dp"
            app:trackColor="?attr/colorSurfaceVariant"
            app:indicatorColor="?attr/colorPrimary" />

        <!-- Countdown Value -->
        <TextView
            android:id="@+id/text_countdown_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="15"
            android:textSize="64sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:contentDescription="@string/countdown_seconds_desc" />

    </FrameLayout>

    <!-- Demo Note -->
    <TextView
        android:id="@+id/text_demo_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/emergency_demo_note"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@id/btn_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- I'm OK Button (Blue, Filled) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel"
        style="@style/Widget.Material3.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/emergency_im_ok"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingVertical="16dp"
        app:cornerRadius="20dp"
        app:backgroundTint="?attr/colorPrimary"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/emergency_im_ok_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>

