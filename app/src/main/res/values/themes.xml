<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.FallDetection" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorSurfaceVariant">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_light</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:colorBackground">@color/background_light</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
    </style>

    <!-- NoActionBar variant for MainActivity -->
    <style name="Theme.FallDetection.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>